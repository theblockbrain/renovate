    "config:recommended",
    "mergeConfidence:all-badges",
    "helpers:pinGitHubActionDigests"
  ],
  "prCreation": "immediate",
  "github-actions": {
    "managerFilePatterns": [
      "/\\.github/workflows/.+\\.ya?ml$"
    ],
    "pinDigests": true
  }
}
